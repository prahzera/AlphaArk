<div class="page-header">
  <h1>ALPHA ARK Servers</h1>
  <p>Connect to our official servers and enjoy the best ARK: Survival Evolved experience</p>
</div>

<div class="servers-grid" id="serversGrid">
  <!-- Servers will be loaded dynamically from the API -->
  <div class="loading-placeholder">
    <div class="loading-spinner"></div>
    <p>Loading servers...</p>
  </div>
</div>

<section class="info-section">
  <h2><i class="fas fa-info-circle"></i> Important Information</h2>
  <div class="info-grid">
    <div class="info-card">
      <h3><i class="fas fa-plug"></i> How to Connect</h3>
      <p>1. Open Steam<br>2. Go to View > Servers<br>3. Paste the server IP<br>4. Connect and enjoy!</p>
    </div>
    <div class="info-card">
      <h3><i class="fas fa-download"></i> Required Mods</h3>
      <p>Some servers require specific mods. Download them automatically when connecting or from the Steam Workshop.</p>
    </div>
    <div class="info-card">
      <h3><i class="fas fa-gavel"></i> Server Rules</h3>
      <p>Respect other players, don't use hacks or cheats, and follow community rules for a better experience.</p>
    </div>
    <div class="info-card">
      <h3><i class="fas fa-headset"></i> Technical Support</h3>
      <p>Having trouble connecting? Join our Discord for technical help and real-time support.</p>
    </div>
  </div>
</section>

     <!-- Template for servers -->
     <template id="serverTemplate">
       <div class="server-card">
                 <div class="server-image">
          <img src="" alt="" class="map-image">
          <div class="server-overlay">
            <div class="server-status">
              <i class="fas fa-circle status-indicator"></i>
              <span class="status-text"></span>
            </div>
          </div>
          <div class="version-badge">
            <span class="version-text"></span>
          </div>
        </div>
         
         <div class="server-header">
           <div class="server-name">
             <i class="fas fa-server server-icon"></i>
             <span class="server-name-text"></span>
           </div>
         </div>
    
    <div class="server-info">
      <div class="info-item">
        <span class="info-label">Map</span>
        <span class="info-value map-value"></span>
      </div>
      <div class="info-item">
        <span class="info-label">Players</span>
        <span class="info-value players-value"></span>
      </div>
    </div>
    
    <div class="server-ip-container">
      <div class="server-ip"></div>
      <div class="server-actions">
        <button class="copy-btn" onclick="copyToClipboard(this)">
          <i class="fas fa-copy"></i>
          Copy IP
        </button>
        <a href="#" class="connect-btn" target="_blank">
          <i class="fas fa-play"></i>
          Connect
        </a>
      </div>
    </div>
    
    
  </div>
</template>

<script>


// Function to load servers from the API
async function loadServers() {
    try {
        const response = await fetch('/api/servers');
        const data = await response.json();
        
        if (data.success) {
            displayServers(data.data);
        } else {
            throw new Error(data.error || 'Error loading servers');
        }
    } catch (error) {
        console.error('Error loading servers:', error);
        showError('Error loading servers. Try reloading the page.');
    }
}

     // Function to display servers on the page
     function displayServers(servers) {
         const grid = document.getElementById('serversGrid');
         const template = document.getElementById('serverTemplate');

         // Clear grid
         grid.innerHTML = '';

         if (servers.length === 0) {
             grid.innerHTML = '<p class="no-servers">No servers available</p>';
             return;
         }

         servers.forEach(server => {
             const clone = template.content.cloneNode(true);

             // Fill server data
             clone.querySelector('.server-name-text').textContent = server.name;
             clone.querySelector('.server-ip').textContent = `${server.ip}:${server.port}`;

             // Configure map image
             const mapImage = clone.querySelector('.map-image');
             const mapImageName = server.map || server.name;
             const mapName = server.name;
             const imagePath = `/assets/img/servers/${mapImageName}.webp`;
             mapImage.src = imagePath;
             mapImage.alt = `${mapName} - ${server.name}`;
             
             // Handle image error
             mapImage.onerror = function() {
                 this.src = '/assets/img/servers/default.webp'; // Default image
                 this.alt = 'Default map';
             };
        
        // Server status
        const statusElement = clone.querySelector('.server-status');
        const statusText = clone.querySelector('.status-text');
        const statusIndicator = clone.querySelector('.status-indicator');
        
        if (server.status === 'online') {
            statusElement.className = 'server-status online';
            statusText.textContent = 'Online';
            statusIndicator.className = 'fas fa-circle status-indicator';
        } else {
            statusElement.className = 'server-status offline';
            statusText.textContent = 'Offline';
            statusIndicator.className = 'fas fa-circle status-indicator';
        }
        
        // Server information
        clone.querySelector('.map-value').textContent = server.map || server.name;
        clone.querySelector('.players-value').textContent = server.status === 'online' ? 
            `${server.players}/${server.maxPlayers}` : '0/0';
        
        // Configure version in badge
        const versionText = clone.querySelector('.version-text');
        versionText.textContent = server.version || 'Unknown';
        
        // Buttons
        const copyBtn = clone.querySelector('.copy-btn');
        const connectBtn = clone.querySelector('.connect-btn');
        
        copyBtn.setAttribute('data-ip', `${server.ip}:${server.port}`);
        connectBtn.href = server.steam || `steam://connect/${server.ip}:${server.port}`;
        
        // Add to grid
        grid.appendChild(clone);
    });
}

// Function to copy IP to clipboard
function copyToClipboard(button) {
    const ip = button.getAttribute('data-ip');
    
    navigator.clipboard.writeText(ip).then(() => {
        const originalText = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check"></i> Copied!';
        button.classList.add('btn-success');
        
        setTimeout(() => {
            button.innerHTML = originalText;
            button.classList.remove('btn-success');
        }, 2000);
    }).catch(err => {
        console.error('Error copying to clipboard:', err);
        showError('Error copying IP to clipboard');
    });
}

// Function to show errors
function showError(message) {
    const grid = document.getElementById('serversGrid');
    grid.innerHTML = `
        <div class="error-message">
            <i class="fas fa-exclamation-triangle"></i>
            <p>${message}</p>
            <button onclick="loadServers()" class="btn btn-primary">Retry</button>
        </div>
    `;
}

// Function to automatically update servers
function startAutoRefresh() {
    // Update every 30 seconds
    setInterval(loadServers, 30000);
}

// Load servers when page loads
document.addEventListener('DOMContentLoaded', () => {
    loadServers();
    startAutoRefresh();
});
</script>

