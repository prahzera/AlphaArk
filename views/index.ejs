<script>
// Función para cargar estadísticas de servidores
async function loadServerStats() {
    try {
        const response = await fetch('/api/servers/stats');
        const data = await response.json();
        
        if (data.success) {
            updateStats(data.data);
        }
    } catch (error) {
        console.error('Error loading server stats:', error);
    }
}

// Función para actualizar las estadísticas en la página
function updateStats(stats) {
    // Actualizar jugadores activos
    const activePlayersElement = document.getElementById('activePlayers');
    if (activePlayersElement) {
        animateNumber(activePlayersElement, 0, stats.totalPlayers, 1000);
    }
    
    // Actualizar servidores online
    const totalServersElement = document.getElementById('totalServers');
    if (totalServersElement) {
        animateNumber(totalServersElement, 0, stats.onlineServers, 1000);
    }
    

    
    // Actualizar estadísticas del hero
    const heroActivePlayersElement = document.getElementById('heroActivePlayers');
    if (heroActivePlayersElement) {
        animateNumber(heroActivePlayersElement, 0, stats.totalPlayers, 1000);
    }
    
    const heroTotalServersElement = document.getElementById('heroTotalServers');
    if (heroTotalServersElement) {
        animateNumber(heroTotalServersElement, 0, stats.onlineServers, 1000);
    }
}

// Función para animar números
function animateNumber(element, start, end, duration) {
    const startTime = performance.now();
    const startValue = start;
    const endValue = end;
    
    function updateNumber(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);
        
        const currentValue = Math.floor(startValue + (endValue - startValue) * progress);
        element.textContent = currentValue;
        
        if (progress < 1) {
            requestAnimationFrame(updateNumber);
        }
    }
    
    requestAnimationFrame(updateNumber);
}

// Función para actualizar estadísticas automáticamente
function startStatsAutoRefresh() {
    // Actualizar cada 30 segundos
    setInterval(loadServerStats, 30000);
}

// Cargar estadísticas al cargar la página
document.addEventListener('DOMContentLoaded', () => {
    loadServerStats();
    startStatsAutoRefresh();
});
</script>